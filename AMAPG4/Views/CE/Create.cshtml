@model AMAPG4.Models.User.CE

@{
    ViewBag.Title = "Créer un nouveau compte CE";
    Layout = "_BackOfficeLayout";
}

<h1 class="bo-entity">Créer un nouveau compte CE</h1>

@using (Html.BeginForm("Create", "CE", FormMethod.Post))
{
    <div class="user-info">
        <label>Nom :</label>
        @Html.TextBoxFor(model => model.Account.Name, new { @class = "form-control" })
    </div>

    <div class="user-info">
        <label>Nom du contact :</label>
        @Html.TextBoxFor(model => model.ContactName, new { @class = "form-control" })
    </div>

    <div class="user-info">
        <label>Email :</label>
        @Html.TextBoxFor(model => model.Account.Email, new { @class = "form-control" })
    </div>

    <div class="user-info">
        <label>Téléphone :</label>
        @Html.TextBoxFor(model => model.Account.Phone, new { @class = "form-control" })
    </div>

    <div class="user-info">
        <label>Adresse :</label>
        @Html.TextBoxFor(model => model.Account.Address, new { @class = "form-control" })
    </div>

    <div class="user-info">
        <label>Nombre d'employés :</label>
        @Html.TextBoxFor(model => model.NumberOfEmployees, new { @class = "form-control" })
    </div>

    <div class="user-info">
        <label>Mot de passe :</label>
        @Html.PasswordFor(model => model.Account.Password, new { @class = "form-control" })
    </div>

    <div class="user-actions">
        <button type="submit" class="btn-save">Créer</button>
    </div>
}
