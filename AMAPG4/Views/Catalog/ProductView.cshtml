@model AMAPG4.Models.Catalog.Product

<h2>@Model.ProductName</h2>

<div>
    <p><strong>Prix :</strong> @Model.Price.ToString("C")</p>
    <p><strong>Description :</strong> @Model.Description</p>
    <p><strong>Disponibilité :</strong> @(Model.IsAvailable ? "En Stock" : "Hors Stock")</p>
</div>

<a href="@Url.Action("Index", "Catalog")">Retour à la Liste des Produits</a>
