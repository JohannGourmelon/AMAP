@model AMAPG4.Models.User.CE

@{
    ViewBag.Title = "Détails du CE n° " + Model.Id;
    Layout = "_BackOfficeLayout";
}

<div class="user-profile-form-container">
    <div class="user-profile">
        <div class="form-header">
            <h1 class="bo-entity">Détails du CE n° @Model.Id</h1>
            <a href="@Url.Action("CEs", "Dashboard")" class="btn-action">Retour aux CE</a>
        </div>

        <!-- Affichage des informations du CE -->
        <div class="user-info">
            <label>Nom :</label>
            <span>@Model.Account.Name</span>
        </div>

        <div class="user-info">
            <label>Nom du contact :</label>
            <span>@Model.ContactName</span>
        </div>

        <div class="user-info">
            <label>Email :</label>
            <span>@Model.Account.Email</span>
        </div>

        <div class="user-info">
            <label>Téléphone :</label>
            <span>@Model.Account.Phone</span>
        </div>

        <div class="user-info">
            <label>Adresse :</label>
            <span>@Model.Account.Address</span>
        </div>

        <div class="user-info">
            <label>Nombre d'employés :</label>
            <span>@Model.NumberOfEmployees</span>
        </div>

        <!-- Actions : Modifier, Supprimer et Retour -->
        <div class="user-actions">
            <a href="@Url.Action("Update", "CE", new { id = Model.Id })" class="btn-action btn-update">Modifier</a>

            <form method="post" action="@Url.Action("Delete", "CE", new { id = Model.Id })" style="display:inline;">
                <button type="submit" class="btn-action btn-delete">Supprimer</button>
            </form>
        </div>
    </div>
</div>
