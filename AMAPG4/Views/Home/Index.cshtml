@using Microsoft.AspNetCore.Authorization
@{
    
    ViewBag.Title = "Accueil";
    Layout = "_layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/styles.css" />
}

<main>
    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
    <div class="home-body">
            <!-- Welcome for the home page -->
        <div class="welcome-text">
            <h2>Bienvenue à l'AMAP Mon Panier Paysan !</h2>
            <p>
                Envie de produits frais, bio et de saison ? Envie d’aider les productrices et producteurs locaux à développer un mode de production respectueux de l’environnement,
                tout en les rémunérant à un juste prix ? <br />
                Alors, venez découvrir l’AMAP Mon Panier Paysan,  la nouvelle AMAP près de chez vous !
            </p>
        </div>
        <!-- Displaying main image -->
        <img src="~/images/home_image.png" />
    </div>
</main>