@using AMAPG4.Models.Catalog
@using System.Globalization
@model AMAPG4.ViewModels.BasketsViewModel
@{
    ViewBag.Title = "Abonements";
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/global.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
</head>

<div class="baskets-container">
    @foreach (Product product in Model.Products)
    {
        <div class="product-card product-basket">
            <img class="catalog-photo" src="~/images/LaFermeImages/panier_3.jpg" />
            <div class="product-name">@product.ProductName</div>
            <div class="product-price">@product.Price.ToString("C2", new CultureInfo("fr-FR"))</div>
        </div>
    }
</div>
