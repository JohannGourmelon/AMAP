@using AMAPG4.Models.Catalog
@using System.Globalization
@model AMAPG4.ViewModels.ProducerViewModel
@{
    ViewBag.Title = "Mon Compte";
    Layout = "_Layout";
}

<title>Mes Produits</title>
<link rel="stylesheet" href="~/css/global.css" />
<link rel="stylesheet" href="~/css/styles.css" />

<table>
    <tr>
        <td>Nom du produit</td>
      
        <td>Stock</td>

        <td>Prix</td>
        <td>Date Limite</td>
     
    </tr>
    @foreach (Product product in Model.Products)
    {
        <tr>
            <td>@product.ProductName</td>
     
            <td>@product.Stock</td>

            <td>@product.Price</td>
            <td>@product.LimitDate.ToShortDateString()</td>

        </tr>
    }
</table>
<div class="nav-element">@Html.ActionLink("Retour a mon compte", "Index", "Account", new { @class = "return-catalog" })</div>
<div class="nav-element">@Html.ActionLink("Retour a l'accueil", "Index", "Home", new { @class = "return-catalog" })</div>
