@using AMAPG4.Models.ContactForm
@using AMAPG4.Models.Catalog
@using AMAPG4.Models.User
@model AMAPG4.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Accueil Back Office";
    Layout = "_BackOfficeLayout";
}


<div class="dashboard-container">

    <!-- Bloc pour les Individuals -->
    <div class="dashboard-block">
        <h2><a href="@Url.Action("Individuals")">Adhérents</a></h2>
        <div class="table-container">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Date d'inscription</th>
                        <th>Bénévole</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Individual individual in Model.Individuals)
                    {
                        <tr>
                            <td>@individual.Account.Name</td>
                            <td>@individual.FirstName</td>
                            <td>@individual.Account.Email</td>
                            <td>@individual.Account.Phone</td>
                            <td>@individual.InscriptionDate.ToShortDateString()</td>
                            <td>@(individual.IsVolunteer ? "Oui" : "Non")</td>
                            <td class="td-btn-actions">
                                <a href="@Url.Action("Update", "Individual", new { id = individual.Id })" class="btn-action btn-update">Modifier</a>
                                <form method="post" action="@Url.Action("Delete", "Individual", new { id = individual.Id })">
                                    <button type="submit" class="btn-action btn-delete">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bloc pour les Producers -->
    <div class="dashboard-block">
        <h2><a href="@Url.Action("Producers")">Producteurs</a></h2>
        <div class="table-container">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Nom du contact</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>SIRET</th>
                        <th>RIB</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Producer producer in Model.Producers)
                    {
                        <tr>
                            <td>@producer.Account.Name</td>
                            <td>@producer.ContactName</td>
                            <td>@producer.Account.Email</td>
                            <td>@producer.Account.Phone</td>
                            <td>@producer.Siret</td>
                            <td>@producer.RIB</td>
                            <td class="td-btn-actions">
                                <a href="@Url.Action("Update", "Producer", new { id = producer.Id })" class="btn-action btn-update">Modifier</a>
                                <form method="post" action="@Url.Action("Delete", "Producer", new { id = producer.Id })">
                                    <button type="submit" class="btn-action btn-delete">Supprimer</button></form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bloc pour les CEs -->
    <div class="dashboard-block">
        <h2><a href="@Url.Action("CEs")">Comités d'entreprise (CE)</a></h2>
        <div class="table-container">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Nom du contact</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Nombre d'employés</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CE ce in Model.CEs)
                    {
                        <tr>
                            <td>@ce.Account.Name</td>
                            <td>@ce.ContactName</td>
                            <td>@ce.Account.Email</td>
                            <td>@ce.Account.Phone</td>
                            <td>@ce.NumberOfEmployees</td>
                            <td class="td-btn-actions">
                                <a href="@Url.Action("Update", "CE", new { id = ce.Id })" class="btn-action btn-update">Modifier</a>
                                <form method="post" action="@Url.Action("Delete", "CE", new { id = ce.Id })">
                                    <button type="submit" class="btn-action btn-delete">Supprimer</button></form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bloc pour les Products -->
    <div class="dashboard-block">
        <h2>Produits</h2>
        <div class="table-container">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Nom du produit</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Disponible</th>
                        <th>Date limite</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        <tr>
                            <td>@product.ProductName</td>
                            <td>@product.Description</td>
                            <td>@product.Price</td>
                            <td>@product.Stock</td>
                            <td>@product.IsAvailable</td>
                            <td>@product.LimitDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bloc pour les Contact -->
    <div class="dashboard-block">
        <h2>Formulaire de contact</h2>
        <div class="table-container">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                        <th>Téléphone</th>
                        <th>Message</th>
                        <th>Date d'envoi</th>
                        <th>Statut</th>
                        <th>Actions</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Contacts != null && Model.Contacts.Any())
                    {
                        @foreach (var contact in Model.Contacts)
                        {
                            <tr>
                                <td>@contact.Name</td>
                                <td>@contact.FirstName</td>
                                <td>@contact.Email</td>
                                <td>@contact.PhoneNumber</td>
                                <td>@contact.Message</td>
                                <td>@contact.DateSent</td>
                                <td>@contact.Status</td>
                                <td>
                                    @if (contact.Status == ContactStatus.NonTraite)
                                    {
                                        <form asp-action="MarkAsTraite" asp-route-id="@contact.Id" method="post">
                                            <button type="submit" class="btn btn-success">Marquer comme Traité</button>
                                        </form>
                                    }

                                </td>


                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7">Aucun contact disponible.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Bloc pour les propositions de produits -->
    <div class="dashboard-block">
        <h2>Proposition de produit à valider ou pas</h2>
        <div class="table-container">
            <table class="dashboard-table">
                <thead>
                    <tr>
                        <th>Nom du produit</th>
                        <th>Description</th>
                        <th>Prix</th>
                        <th>Stock</th>
                        <th>Date Limite</th>
                        <th>Statut</th>
                        <th>Actions</th>


                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.NewProducts != null && Model.NewProducts.Any())
                    {
                        @foreach (NewProduct newProduct in Model.NewProducts)
                        {
                            <tr>
                                <td>@newProduct.ProductName</td>
                                <td>@newProduct.Description</td>
                                <td>@newProduct.Price.ToString("C2")</td>
                                <td>@newProduct.Stock</td>
                                <td>@newProduct.LimitDate.ToShortDateString()</td>
                                <td>@newProduct.SubmissionStatus.ToString()</td>

                                <td>
                                    @if (newProduct.SubmissionStatus == SubmissionStatus.Pending)
                                    {
                                        <form asp-action="ValidateAndAddProduct" method="post">
                                            <input type="hidden" name="id" value="@newProduct.Id" />
                                            <button type="submit" class="btn btn-connection">Valider</button>
                                        </form>
                                        <form asp-action="RejectProduct" method="post">
                                            <input type="hidden" name="id" value="@newProduct.Id" />
                                            <button type="submit" class="btn btn-success">Rejeter</button>
                                        </form>
                                    }

                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr> 
                    <td colspan="7">Aucun nouveau produit à valider.</td>


                    
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>