@model AMAPG4.Models.Catalog.NewProduct

@{
    ViewBag.Title = "Détails du Produit n° " + Model.Id;
    Layout = "_BackOfficeLayout";
}

<div class="user-profile-form-container">
    <div class="user-profile">
        <h1 class="bo-entity">Détails du Produit n° @Model.Id</h1>

        <!-- Affichage des informations du produit -->
        <div class="user-info">
            <label>Nom du produit :</label>
            <span>@Model.ProductName</span>
        </div>

        <div class="user-info">
            <label>Description :</label>
            <span>@Model.Description</span>
        </div>

        <div class="user-info">
            <label>Prix :</label>
            <span>@Model.Price.ToString("C")</span>
        </div>

        <div class="user-info">
            <label>Stock :</label>
            <span>@Model.Stock</span>
        </div>

        <div class="user-info">
            <label>Date limite :</label>
            <span>@Model.LimitDate.ToShortDateString()</span>
        </div>

        <div class="user-info">
            <label>Type de produit :</label>
            <span>@Model.ProductType</span>
        </div>

        <div class="user-info">
            <label>Statut de soumission :</label>
            <span>@Model.SubmissionStatus</span>
        </div>

        <div class="user-info">
            <label>Producteur :</label>
            <span>@Model.Producer.Account.Name</span>
        </div>

        <!-- Actions : Modifier, Valider, Rejeter et Retour -->
        <div class="user-actions">
            <a href="@Url.Action("Update", "NewProduct", new { id = Model.Id })" class="btn-action btn-update">Modifier</a>

            <form method="post" action="@Url.Action("Create", "NewProduct", new { id = Model.Id })" style="display:inline;">
                <button type="submit" class="btn-action btn-validate">Valider</button>
            </form>

            <form method="post" action="@Url.Action("Reject", "NewProduct", new { id = Model.Id })" style="display:inline;">
                <button type="submit" class="btn-action btn-reject">Rejeter</button>
            </form>

            <a href="@Url.Action("Index", "Dashboard")" class="btn-action btn-return">Retour au tableau de bord</a>
        </div>
    </div>
</div>
