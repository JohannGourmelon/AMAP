<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>


<header>
    <img id="header-logo" src="~/images/logo.png" />


	<nav>
	

		
		@await Component.InvokeAsync("Navbar")
	</nav>

	<div class="nav-buttons">
		@if (User.Identity.IsAuthenticated)
		{
			<div class="btn-account"><div class="btn-text">@Html.ActionLink("Mon Compte", "Index", "Account", null, new { @class = "btn-link" })</div></div>
			<div class="btn-logout"><div class="btn-text">@Html.ActionLink("Déconnexion", "Deconnexion", "Login", null, new { @class = "btn-link" })</div></div>
		}
		else
		{
			<div class="btn-connection"><div class="btn-text">@Html.ActionLink("Se Connecter", "Index", "Login", null, new { @class = "btn-link" })</div></div>
			<div class="btn-register"><div class="btn-text">@Html.ActionLink("S’inscrire", "Index", "CreateAccount", null, new { @class = "btn-link" })</div></div>
		}
		</div>

</header>

<body>
    @RenderBody()
</body>

<footer class="footer">
    <div class="footer-top">
        <div class="footer-links">
            <div class="footer-nav-element">@Html.ActionLink("Accueil", "Index", "Home", new { @id = 1 }, new { @class = "btn-link-footer" })</div>
            <div class="footer-nav-element">@Html.ActionLink("Catalogue", "Index", "Catalog", new { @class = "btn-link-footer" })</div>
        </div>

        <img class="footer-logo" src="~/images/logo.png" />

        <div class="footer-contact">
            <p>Site de distribution :</p>
            <p>36 rue de Château Rouge<br>73000 CHAMBERY</p>
            <p>monpanierpaysan@amap.fr</p>
        </div>
    </div>
    

    <div class="footer-bottom">
        <p>Mentions légales – Politique de confidentialité &copy; 2024 - Mon Panier Paysan</p>
    </div>
</footer>
</html>
