@using AMAPG4.Models.Catalog
@using AMAPG4.Models.Command
@using static AMAPG4.ViewModels.CommandViewModel

@model AMAPG4.ViewModels.OrderLineViewModel

@{

    Layout = "_layout";
}

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/css/global.css">
    <title>Panier</title>

<h3>
    Id utilisateur login :
    @Model.UserActualId

    @if (Model.OrderLinesCurrent != null)
{
        <div> Votre panier contient : </div>
        <table>
        <tr> 
            <td>Produit</td>
            <td>Prix</td>
            <td>Quantité</td>
            <td>Total par produit</td>
            <td> </td>
        </tr>
    @foreach (OrderLine orderLine in Model.OrderLinesCurrent)
    {
           



            Model.OrderLineId = @orderLine.Id;
            Model.orderLine = @orderLine;
            <tr>
                <td>@orderLine.Product.ProductName</td>
                    <td>@orderLine.Product.Price €</td>
                
         

            @using (Html.BeginForm("Index", "Order"))
            {

                <input type="hidden" name ="OrderLineId" value="@Model.OrderLineId"/>

                <input type="hidden" name="totalStack" value="@orderLine.Quantity + @orderLine.Product.Stock" />

                    <td> <input type="number" name="NewQuantity" value="@orderLine.Quantity" min="1" max="@orderLine.Product.Stock" step="1" onchange="this.form.submit()"></td>


                        <td>@orderLine.Total €</td>
            }

            @using (Html.BeginForm("Index", "Order"))
            {
       

                <input type="hidden" name="OrderLineId" value="@Model.OrderLineId" />

                <input type="hidden" name="NewQuantity" value="0" />

                    <td>
                        <input type="submit" value="Supprimer" />
                    </td>
            }
            </tr>
            } <tr>
                <td></td>
                <td></td>
                <td>Total :</td>
                <td>@Model.Total €</td>
            </tr>
        </table>
        
    <p> </p>
}
else
{

        <div>
            Le panier est Vide !
        </div>


    }

</h3>




<div class="nav-element">@Html.ActionLink("Continuer mes achats", "Index", "Catalog", new { @class = "return-catalog" })</div>
<div class="nav-element">@Html.ActionLink("Payement", "Index", "Command", new { @class = "return-catalog" })</div>
